{
  "name": "@iosio/capsule",
  "version": "2.0.2",
  "description": "Opinionated mini framework for React. Handles state, styles and more...",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build": "nwb build-react-component",
    "clean": "nwb clean-module && nwb clean-demo",
    "prepublishOnly": "npm run build",
    "start": "nwb serve-react-demo --no-hmre",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll",
    "quicky": "node quicky.js"
  },
  "dependencies": {
    "@iosio/jss_nano": "^1.0.2",
    "@iosio/routing": "^1.0.1",
    "@iosio/store": "^1.0.1",
    "@iosio/utils": "^3.1.1"
  },
  "peerDependencies": {
    "react": "16.x"
  },
  "devDependencies": {
    "babel-jest": "^24.7.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^7.0.2",
    "jest": "^24.7.1",
    "jest-dom": "^3.1.3",
    "nwb": "0.23.x",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "react-testing-library": "^6.1.2"
  },
  "author": "iosio",
  "homepage": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iosio/capsule.git"
  },
  "jest": {
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**"
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "testPathIgnorePatterns": [
      "/.circleci/",
      "/coverage/",
      "/es/",
      "/lib/",
      "/node_modules/",
      "/umd/",
      "_test_utils.js"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  }
}
